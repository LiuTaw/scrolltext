<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.liutaw.mvctest.MainActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to use vertical scroll text!"
    android:layout_marginBottom="10dp"/>
    <com.liutaw.mvctest.ScrollTextVertical
        android:id="@+id/scrolltextvertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.liutaw.mvctest.ScrollTextVertical>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Start/开始" />

    <Button
        android:id="@+id/btn_end"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause/暂停" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop/终止" />

    <Button
        android:id="@+id/btn_replace"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Replace with new data/替换成新数据" />

    <Button
        android:id="@+id/btn_change"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new data/增加新数据" />
</LinearLayout>
